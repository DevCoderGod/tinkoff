{
	"compilerOptions": {
		"target": "ES2020",
		"esModuleInterop": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "build",
		"baseUrl": ".",
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"paths": {
			"@models": ["../shared/models/Models"],
			"@api": ["../shared/api/Api"],
			"@tApi": ["../shared/tApi/tApi"],
			"@proto/*": ["../shared/tsproto/*"],
			"@tinkoff/*": ["../shared/types/tsproto/*"],
		}
	},
	"include": ["src/**/*", "tests/**/*"],
	"references": [
		{
			"path": "../shared"
		}
	]	
}